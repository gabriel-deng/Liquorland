<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.liquorland.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:id="@+id/navigation_brands"
        android:name="com.example.liquorland.ui.brands.BrandsFragment"
        android:label="@string/title_Brands"
        tools:layout="@layout/brands_fragment"/>
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.liquorland.ui.cart.CartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/cart_fragment" />

    <fragment
        android:id="@+id/navigation_checkout"
        android:name="com.example.liquorland.Checkout"
        android:label="Checkout"
        tools:layout="@layout/fragment_checkout" />
    <activity
        android:id="@+id/authenticationActivity"
        android:name="com.example.liquorland.AuthenticationActivity"
        android:label="activity_authentication"
        tools:layout="@layout/activity_authentication" />
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.liquorland.ui.ItemDetailFragment"
        android:label="Product's Detail"
        tools:layout="@layout/fragment_item_detail" />
    <fragment
        android:id="@+id/navigation_orders"
        android:name="com.example.liquorland.ui.OrdersFragment"
        android:label="Orders"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/navigation_product_form"
        android:name="com.example.liquorland.ui.ProductFormFragment"
        android:label="Product Form"
        tools:layout="@layout/fragment_product_form" />
</navigation>